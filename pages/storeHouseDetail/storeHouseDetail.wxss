.goodsname{
  background-color:#fff;
  font-size: 32rpx;
  padding:30rpx 20rpx 20rpx 20rpx;
  font-family: 微软雅黑;
  height: 94rpx;
  display: flex;
}
.goodsname view{
  display: inline-block;
}
.gn-txt{
  display: inline-block;
  width: 80%;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  overflow:hidden;
  white-space:nowrap;
  -webkit-line-clamp: 2;
}
.hot-v{
  width: 20%;
  display: inline-block;
  padding-left: 40rpx;
}
.hot-v view{
  font-size: 34rpx;
}
.hot-v text{
  color: var(--red);
  font-weight: bold;
  margin-left: 10rpx;
}
.info-list{
  background-color:#fff;
  padding:0 20rpx 0 20rpx;
}
.info-tle text{
  font-size: 26rpx;
  font-weight: bolder;
  font-family: 微软雅黑;
  color: #333;
}
.info-content text{
  font-family: 微软雅黑;
  color: #888;
}
.info-item{
  padding:20rpx 0 20rpx 0;
}